feature bgp
router bgp {{ local_as }}
  address-family ipv4 unicast
    {%- for route in advertised_routes %}
    network {{ route }}
    {%- endfor %}
  neighbor {{ peer1_ip }} remote-as {{ peer1_as }}
    update-source loopback1
    ebgp-multihop 2
    address-family ipv4 unicast
    {%- if peer1_ipv6 == 'True' %}
    address-family ipv6 unicast
    {% endif %}